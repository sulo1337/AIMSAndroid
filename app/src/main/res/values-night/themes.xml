<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AIMSAndroid" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColorDM</item>
        <item name="colorPrimaryVariant">@color/primaryColorDM</item>
        <item name="colorOnPrimary">@color/primaryTextColorDM</item>
        <item name="colorOnPrimaryVariant">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryDarkColorDM</item>
        <item name="colorSecondaryVariant">@color/primaryLightColorDM</item>
        <item name="colorOnSecondary">@color/primaryTextColorDM</item>
        <item name="android:colorControlActivated">@color/secondaryLightColor</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.AIMSAndroid.NoActionBar" parent="Theme.AIMSAndroid">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>